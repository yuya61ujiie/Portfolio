<% content_for :title, "保存リスト" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 mb-3">
      <h1 class="text-center">保存リスト</h1>
    </div>
    <% if @spots.present? %>
      <div id="spots">
        <% @spots.each do |spot| %>
          <%= render spot %>
        <% end %>
      </div>
    <% else %>
      <h2 class="col-12 text-center">保存したスポットがありません</h2>
    <% end %>
  </div>
</div>
