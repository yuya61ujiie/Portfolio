<% content_for :title, "スポット一覧" %>

<div class="container">
  <div class="row">
    <div class="col-4 offset-4">
      <h1 class="text-center">スポット一覧</h1>
    </div>
    <div class="col-2 offset-2">
      <%= link_to "スポット投稿", new_spot_path, class: "btn btn-primary" %>
    </div>

    <div id="spots">
      <% @spots.each do |spot| %>
        <%= render spot %>
      <% end %>
    </div>
  </div>
</div>

