<div class="container">
  <div class="row text-center">
    <div class="col-6 mb-2 mx-auto">
      <h1>ユーザー登録</h1>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="col-4 mb-3 mx-auto">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="col-4 mb-3 mx-auto">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control"  %>
      </div>

      <div class="col-4 mb-3 mx-auto">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上で入力してください" %>
      </div>

      <div class="col-4 mb-4 mx-auto">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上で入力してください"  %>
      </div>

      <div class="col-4 mb-4 mx-auto">
        <%= f.submit %>
      </div>
    <% end %>

    <div class="col-8 mb-4 mx-auto">
      <%= button_to image_tag('sign_in_google.webp'), user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "btn btn-link p-0 border-0" %>
    </div>

    <div class="col-8 mx-auto">
      <%= link_to "パスワードを忘れた方はこちら", new_user_password_path %>
    </div>
  </div>
</div>