<div class="container">
  <div class="row text-center">
    <div class="col-6 mb-4 mx-auto">
      <h2>パスワード変更</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="col-4 mb-4 mx-auto">
        <%= f.label :password, "新しいパスワード" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" , class: "form-control", placeholder: "6文字以上で入力してください" %>
      </div>

      <div class="col-4 mb-4 mx-auto">
        <%= f.label :password_confirmation, "新しいパスワード再入力" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上で入力してください" %>
      </div>

      <div class="col-4 mx-auto">
        <%= f.submit "更新" %>
      </div>
    <% end %>
  </div>
</div>