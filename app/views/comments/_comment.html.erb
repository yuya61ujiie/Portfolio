<div id="<%= dom_id comment %>">
  <div class="container">
    <div class="row">
      <div class="col-7 mx-auto text-center">
        <h2><%= "#{comment.spot.spot_name}"%></h2>
      </div>
      <div class="col-6 mx-auto">
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= "#{comment.user.name}" %></li>
          <li class="list-group-item"><%= "#{comment.scene_i18n}" %></li>
          <li class="list-group-item"><%= "#{comment.start_at.strftime( "%H:%M" )} - #{comment.finish_at.strftime( "%H:%M" )}" %></li>
          <li class="list-group-item"><%= "#{comment.rating_i18n}".html_safe %></li>
          <li class="list-group-item"><%= "#{comment.title}" %></li>
          <li class="list-group-item"><%= "#{comment.body}" %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
